{
  "zero_optimization": {
    "stage": 3,
    "offload_param": {
      "device": "cpu",
      "pin_memory": true
    },
    "offload_optimizer": {
      "device": "cpu",
      "pin_memory": true
    },
    "offload_param_device": "cpu",
    "offload_optimizer_device": "cpu"
  },
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 1e-5,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "weight_decay": 0.01
    }
  },
  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 0.0,
      "warmup_max_lr": 1e-5,
      "warmup_num_steps": 100
    }
  },
  "train_batch_size": 1,
  "gradient_accumulation_steps": 16,
  "fp16": {
    "enabled": false
  }
}

